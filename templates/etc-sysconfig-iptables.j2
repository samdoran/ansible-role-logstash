# {{ ansible_managed }}
*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [49:10158]
-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT
-A INPUT -p icmp -j ACCEPT
-A INPUT -i lo -j ACCEPT
-A INPUT -s 172.30.240.0/20 -p tcp -m state --state NEW -m tcp --dport {{ ssh_port }} -j ACCEPT
-A INPUT -s 192.168.81.161 -p tcp -m state --state NEW -m tcp --dport {{ ssh_port }} -j ACCEPT
-A INPUT -s 192.168.81.128/25 -p tcp -m state --state NEW -m tcp --dport {{ es_http_port }}:{{ es_upper_port_range }} -j ACCEPT
-A INPUT -s 192.168.81.128/25 -p tcp -m state --state NEW -m tcp --dport {{ es_multicast_port }} -d {{ es_multicast_ip }} -j ACCEPT
-A INPUT -j REJECT --reject-with icmp-host-prohibited
-A FORWARD -j REJECT --reject-with icmp-host-prohibited
COMMIT
